<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Toolbar-->


        <!--Content-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnUpload">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <!--Name-->
                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ชื่อร้าน/ชื่อสวน :"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/editFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ชื่อ :"
                    android:inputType="text" />

                <!--Surname-->
                <EditText
                    android:id="@+id/editSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="นามสกุล :"
                    android:inputType="text" />

                <!--Address-->
                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="ที่อยู่ :"
                    android:inputType="textMultiLine"
                    android:lines="3" />

                <!--Phone-->
                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="เบอร์โทรศัพท์ :"
                    android:inputType="phone" />

                <!--User-->
                <EditText
                    android:id="@+id/editUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ผู้ใช้งาน :"
                    android:inputType="text" />

                <!--Password-->
                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="รหัสผ่าน: "
                    android:inputType="text" />

                <!--Group User-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="ประเภทผู้ใช้งาน"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/ragType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin" />

                    <RadioButton
                        android:id="@+id/radFarmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer" />

                    <RadioButton
                        android:id="@+id/radProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product" />

                    <RadioButton
                        android:id="@+id/redFarmerandProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer and Product"
                        android:layout_marginBottom="40dp"/>
                </RadioGroup>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="บันทึกลงฐานข้อมูล" />

    </RelativeLayout>

</FrameLayout>

