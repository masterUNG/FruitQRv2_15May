<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5D5D5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/bg_item"
        android:orientation="vertical"
        android:padding="10dp">

        <!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/logo2" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Fruit"
                android:textColor="#009688"
                android:textSize="30dp"
                android:textStyle="bold"
                app:fontFamily="@font/fonts1" />


        </LinearLayout>

        <!--Amount and Unit and Date-->
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวน = 123 กิโลกรัม"
                android:textSize="24dp"
                android:textStyle="bold"
                app:fontFamily="@font/fonts1" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="7/04/2019"
                android:textColor="#8BC34A"
                android:textSize="24dp"
                android:textStyle="bold"
                app:fontFamily="@font/fonts1" />


        </RelativeLayout>

        <TextView
            android:layout_marginTop="-10dp"
            android:id="@+id/txtNameOwner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name Owner"
            android:textSize="22dp"
            app:fontFamily="@font/fonts1" />

        <!--&lt;!&ndash;Line ทำเส้น&ndash;&gt;-->
        <!--<View-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="#CEC8C8"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"/>-->


    </LinearLayout>

</LinearLayout>